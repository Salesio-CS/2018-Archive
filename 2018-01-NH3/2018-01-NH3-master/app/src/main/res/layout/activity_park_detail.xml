<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Park_detail">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/park_name_area"
            android:layout_width="wrap_content"
            android:layout_height="150px"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:textSize="24sp" />



        <HorizontalScrollView
            android:id="@+id/ScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/LinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="800px"
                android:orientation="horizontal">
                <!-- 追加したいView -->
                <ImageView
                    android:id="@+id/park_img0"
                    android:layout_width="600px"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/park_img1"
                    android:layout_width="600px"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/park_img2"
                    android:layout_width="600px"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/park_img3"
                    android:layout_width="600px"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/park_img4"
                    android:layout_width="600px"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </HorizontalScrollView>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableLayout
                    android:id="@+id/Haku"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:text="滑り台：2台 "
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:text="バネ遊具：2台"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

                    </TableRow>

                    <TableRow
                        android:layout_width="190dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:text="ブランコ：1席"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:text="ベンチ：いっぱい"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

                    </TableRow>

                </TableLayout>

                <TableLayout
                    android:id="@+id/TabataShizen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:text="滑り台：1台"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:text="バネ遊具：2台"
