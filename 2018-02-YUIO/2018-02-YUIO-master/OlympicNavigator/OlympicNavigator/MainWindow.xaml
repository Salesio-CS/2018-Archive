<Window x:Class="OlympicNavigator.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       xmlns:local="clr-namespace:OlympicNavigator"
       mc:Ignorable="d"
		SizeChanged="Window_SizeChanged"
       Title="MainWindow" Height="720" Width="1280">
	<Grid>
		<Grid x:Name="MapBrowser" MouseMove="ImageOnMap_MouseMove" PreviewMouseUp="MapBrowser_PreviewMouseUp" PreviewMouseWheel="MapBrowser_PreviewMouseWheel"/>
		<Image x:Name="ImageOnMap" IsHitTestVisible="False" MouseDown="ImageOnMap_MouseDown"/>
		<Button x:Name="ChoiceLanguage" Content="JP/EN" Margin="0,0,50,25" Click="ChoiceLanguage_Click" HorizontalAlignment="Right" Width="85" Height="29" VerticalAlignment="Bottom"/>

	</Grid>
</Window>