<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/lightcyan"
    tools:context=".Asy_pro">

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="157dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/whiteColor" />

    <TextView
        android:id="@+id/text_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="今の天気"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/weather_now"
        android:layout_width="49dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="102dp"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/text_now"
        android:layout_below="@+id/text_now"
        android:adjustViewBounds="false"
        android:src="@drawable/clear" />

    <TextView
        android:id="@+id/weather_description"
        android:layout_width="187dp"
        android:layout_height="38dp"
        android:layout_alignTop="@+id/weather_now"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="368dp"
        android:layout_height="98dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/whiteColor"
        android:layout_marginTop="199dp" />

    <TextView
        android:id="@+id/weather_temp"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/weather_now"
        android:layout_below="@+id/weather_temp_m"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/weather_temp_max"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/weather_temp_maxmin"
        android:layout_marginStart="146dp"
        android:textColor="@android:color/holo_red_light"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/weather_temp_min"
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/weather_temp_max"
        android:layout_toEndOf="@+id/weather_temp_max"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/weather_temp_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/weather_temp_min"
        android:layout_toStartOf="@+id/weather_temp_min"
        android:text="最高"
        android:textColor="@android:color/holo_red_light"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/weather_temp_maxmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/weather_temp_min"
        android:layout_alignTop="@+id/view2"
        android:text="最低"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/temp_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/weather_now"
        android:layout_alignTop="@+id/weather_temp_m"
        android:text="気温"
        android:textSize="18sp" />

</RelativeLayout>